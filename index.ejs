<% layout("../views/layout/boilerplate.ejs") -%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    margin-left: 2rem;
    align-items: center;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
  }

  .taxes{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    display: flex;
    align-items: center;
    padding: 1rem;
    margin-left: 2rem;
  }
</style>

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tranding</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Parking</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tranding</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Parking</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tranding</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Parking</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Tranding</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Parking</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Tax Toggler Switch</label>
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 index">
    <% for(chat of alllistings) { %>
      <a href="/listing/<%=chat.id%>/show" class="card-link">
        <div class="card col">
          <img src="<%= chat.image.url %>" class="card-img-top" stalt="Listing" style="height: 20rem">
          <div class="card-img-overlay">
          </div>
          <div class="card-body">
            <p class="card-text">Title: <%= chat.title %>
            </p>
            <p class="card-text">Price: <%= chat.price %>,
              <i class="taxes"> &nbsp; &nbsp; 18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <% } %>
  </div>


  <script>
    let toggle = document.getElementById("flexSwitchCheckDefault");
    toggle.addEventListener("click", ()=>{
      console.log("click");
      let taxinfo =document.getElementsByClassName("taxes")
      for(info of taxinfo){
        if(info.style.display != "inline"){
          info.style.display="inline";
        }
        else{
          info.style.display="none";
        }
        
      }
    })
  </script>