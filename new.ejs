<% layout("../views/layout/boilerplate.ejs") -%>

  <br><br>
  <div class="row offset-3">
    <h2>Create new Listing</h2>
    <br>
    <form method="POST" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="col-7">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
          <div class="valid-feedback">Great Title</div>
          <div class="invalid-feedback">Please enter your title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="enter description" class="form-control"
            required></textarea>
          <div class="valid-feedback">Done</div>
          <div class="invalid-feedback">Please enter your Description</div>
        </div>
        <div class="mb-3"></div>
        <label for="Image" class="form-label">Upload Image</label>
        <input name="listing[image]" class="form-control" type="file" required />
        <div class="valid-feedback">Correct Url</div>
        <div class="invalid-feedback">Please enter your Valid URL</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required />
          <div class="valid-feedback">Done</div>
          <div class="invalid-feedback">Please enter your Price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required />
          <div class="valid-feedback">Done</div>
          <div class="invalid-feedback">Please enter your Location</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
        <div class="valid-feedback">Done</div>
        <div class="invalid-feedback">Please enter your Country</div>
      </div>
      <button class="btn btn-dark">Add</button>
  </div>
  <br><br>


  </form>

  </div>